<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EditProduk">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:theme="@style/ToolbarColoredBackArrow">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/titleBar"
                    style="@style/fontTitleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Edit Produk"
                    android:textSize="16dp" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/foto_produk"
                    android:textAllCaps="true"
                    style="@style/fontMasuk"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="10dp"
                            android:backgroundTint="#EEF3FC"
                            android:minHeight="150dp"
                            android:minWidth="150dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:id="@+id/etImgEditPr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@drawable/ic_add_photo"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:adjustViewBounds="true"
                                android:backgroundTint="@color/white"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:id="@+id/lyViewImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="4dp"
                            android:text="@string/nama_produk"
                            android:textAllCaps="true"
                            style="@style/fontMasuk" />
                        <EditText
                            android:id="@+id/etNamaEditPr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="3dp"
                            style="@style/fontMasuk"
                            android:inputType="textCapWords"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/label_input"
                            android:singleLine="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="4dp"
                            android:text="@string/harga"
                            android:textAllCaps="true"
                            style="@style/fontMasuk"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3dp"
                                android:enabled="false"
                                style="@style/fontMasuk"
                                android:textColor="@color/black"
                                android:text="Rp"
                                android:backgroundTint="@color/label_input"/>
                            <EditText
                                android:id="@+id/etHargaEditPr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3dp"
                                style="@style/fontMasuk"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/label_input"
                                android:singleLine="true"
                                android:inputType="number"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/kategori"
                    android:textAllCaps="true"
                    style="@style/fontMasuk"/>
                <Spinner
                    android:id="@+id/etKategoriEditPr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="3dp"
                    android:entries="@array/kategori"
                    android:theme="@style/fontEdit"
                    android:backgroundTint="@color/label_input"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/jenis_produk"
                    android:textAllCaps="true"
                    style="@style/fontMasuk"/>
                <Spinner
                    android:id="@+id/etJenisEditPr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="3dp"
                    android:entries="@array/jenisPangan"
                    android:theme="@style/fontEdit"
                    android:backgroundTint="@color/label_input"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/stok"
                    android:textAllCaps="true"
                    style="@style/fontMasuk"/>
                <EditText
                    android:id="@+id/etStokEditPr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    style="@style/fontMasuk"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/label_input"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/deskripsi"
                    android:textAllCaps="true"
                    style="@style/fontMasuk"/>
                <EditText
                    android:id="@+id/etDeskEditPr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    style="@style/fontMasuk"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/label_input"
                    android:inputType="text|textMultiLine"
                    android:maxLines="6"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/progress_edit_produk"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/btnSimpanEditPr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:text="@string/simpan"
                        style="@style/fontBtn"
                        android:textSize="12dp"/>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>