<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/cardRiwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/card_riwayat"
        android:elevation="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_shop_bag"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/namaPrDfJual"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/fontTitleContent"
                    android:gravity="center"
                    android:text="Sayur Asem"/>
                <TextView
                    android:id="@+id/wktDfJual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/fontMasuk"
                    android:textSize="10dp"
                    android:gravity="center|end"
                    android:text="9 September 2021"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E5E5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp">
                    <ImageView
                        android:id="@+id/imgDfJual"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher_round"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left|center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/titlePrDfJual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/fontTitleContent"
                        android:text="Sayur Asem"/>
                    <TextView
                        android:id="@+id/hargaPrDfJual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fontMasuk"
                        android:textColor="@color/primer"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:gravity="right|center_horizontal"
                        android:text="Rp. 10.000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kategoriDfJual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fontMasuk"
                        android:textSize="12dp"
                        android:text="Pangan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fontMasuk"
                        android:textSize="12dp"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/jenisDfJual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fontMasuk"
                        android:textSize="12dp"
                        android:text="Makanan"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="left">
                    <Button
                        android:id="@+id/btnEditDfJual"
                        style="@style/fontBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="5dp"
                        android:text="Edit"
                        android:backgroundTint="@color/label_input"
                        android:textSize="9dp" />
                    <Button
                        android:id="@+id/btnHapusDfJual"
                        style="@style/fontBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:text="Hapus"
                        android:backgroundTint="#F85C65"
                        android:textSize="9dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>