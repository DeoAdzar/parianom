<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="20dp"
    tools:context=".activity.LupaPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeMinTextSize="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Lupa Kata Sandi"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="24dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:text="@string/email"
        android:textAllCaps="true"
        style="@style/fontMasuk" />
    <EditText
        android:id="@+id/namaToko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        style="@style/fontMasuk"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:backgroundTint="@color/label_input"
        android:singleLine="true"/>
    <Button
        android:id="@+id/btnMasuk"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/fontBtn"
        android:text="@string/kirim"
        android:background="@drawable/button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek email Anda untuk merubah kata sandai"
        android:textAllCaps="false"
        android:textColor="@color/label_input"
        style="@style/fontMasuk"
        android:layout_gravity="left"/>

</LinearLayout>