<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BukaToko"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="249dp"
            android:layout_height="249dp"
            android:src="@drawable/logo_putih"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/parianom_buka_toko"
            style="@style/fontMasuk"
            android:gravity="center"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnBukaToko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Mulai berjualan"
            style="@style/fontBtn"
            android:background="@drawable/button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/persiapan_buka_toko"
            style="@style/fontMasuk"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>



</LinearLayout>